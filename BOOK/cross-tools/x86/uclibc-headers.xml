  href="uclibc.xml"
  xpointer="xpointer(//*[@role='package'])"/>

  <sect2 role="installation">
    <title>Installation of uClibc Headers</title>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='a'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='b'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='c'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='d'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='e'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='f'])"/>

<screen os="d1"><userinput>cp .config .config.orig
sed -e "/^KERNEL_SOURCE/s:=.*:=\"${CLFS}/usr\":" \
    -e "/^SHARED_LIB_LOADER_PREFIX/s:=.*:=\"/lib\":" \
    -e "/^DEVEL_PREFIX/s:=.*:=\"/usr\":" \
    -e "/^RUNTIME_PREFIX/s:=.*:=\"/\":" \
    .config.orig > .config</userinput></screen>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='h'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='i'])"/>

   <para os="d2">Create the Headers:</para>

<screen os="d3"><userinput>make TARGET_ARCH=i386 headers</userinput></screen>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='l'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='m'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='n'])"/>

<screen os="d5"><userinput>cp -a include/* ${CLFS}/usr/include</userinput></screen>

  </sect2>

