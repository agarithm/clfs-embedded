<sect1 id="ch-cross-tools-uclibc-headers" role="wrap">
  <?dbhtml filename="uclibc-headers.html"?>

  <title>uClibc-&uclibc-version; Headers</title>

  <indexterm zone="ch-cross-tools-uclibc-headers">
    <primary sortas="a-uClibc">uClibc</primary>
    <secondary>cross tools, headers</secondary>
  </indexterm>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@role='package'])"/>

  <sect2 role="installation">
    <title>Installation of uClibc Headers</title>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='c'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='d'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='e'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='f'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='g'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='h'])"/>

<screen os="i"><userinput>cp .config .config.orig
sed -e "/^KERNEL_HEADERS/s:=.*:=\"${CLFS}/usr\":" \
    -e "/^SHARED_LIB_LOADER_PREFIX/s:=.*:=\"/lib\":" \
    -e "/^DEVEL_PREFIX/s:=.*:=\"/usr\":" \
    -e "/^RUNTIME_PREFIX/s:=.*:=\"/\":" \
    .config.orig > .config</userinput></screen>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='j'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='k'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='l'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='m'])"/>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='n'])"/>

<screen os="o"><userinput>make TARGET_ARCH=i386 headers</userinput></screen>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="uclibc.xml"
  xpointer="xpointer(//*[@os='p'])"/>

<screen os="1"><userinput>make PREFIX=${CLFS} install_dev</userinput></screen>

  </sect2>

